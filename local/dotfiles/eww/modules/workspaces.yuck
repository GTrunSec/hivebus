(defwidget workspaces []
  (eventbox
		:onscroll "echo {} | sed -e \"s/up/-1/g\" -e \"s/down/+1/g\" | xargs hyprctl dispatch workspace"
		(box
			:class "module workspaces"
			:spacing 5
		  (for i in workspace
		    (button
					:onclick "hyprctl dispatch workspace ${i.number}"
					:class "ws icon"
					:style "color: ${i.color};"
					"‚óè")))))
